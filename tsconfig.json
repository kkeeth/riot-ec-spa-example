{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "strict": true,
    "rootDir": "./src",
    "sourceMap": true,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist", "node_modules"]
}